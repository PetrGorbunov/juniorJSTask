                                    <!-- field.fieldValue = getDataView(field.fieldValue, false); -->
                                    <td class="text-left" type="<%= field.fieldType %>" edit="<%= field.isEdit %>" > 
                                    <%= getDataView(field.fieldValue, false) %>
                                    </td> 
