            <!-- <tbody> -->
                <% _.each(recordsView, function(record, key, list) { %>
                    <tr> 
                        <% _.each(record.object.fieldsList, function(field, key, list) { %>
                            <!-- <td class="text-left" type="<%= field.fieldType %>" edit="<%= field.isEdit %>" >  -->
